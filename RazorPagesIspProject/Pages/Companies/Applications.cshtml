@page
@model RazorPagesIspProject.Pages.Companies.IndexModel

@{
    ViewData["Title"] = "Applications";
}

<h1>Available Applications</h1>

<p>
    <a asp-page="~/">Return to Home</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].Applicant)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].CompanyType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].MainBusiness)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].PhysicalAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].EmailAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].DateOfIncorporation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Company)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Applicant.EmailAddress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CompanyType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MainBusiness)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhysicalAddress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmailAddress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateOfIncorporation)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
