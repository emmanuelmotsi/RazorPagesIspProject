                    <span asp-validation-for="DirectorVm[1].IdentityNumber" class="text-danger"></span>
                </div>
                <div class="form-group col-12">
                    <label asp-for="DirectorVm[1].PhysicalAddress" class="control-label">Address</label>
                    <input asp-for="DirectorVm[1].PhysicalAddress" class="form-control" />
                    <span asp-validation-for="DirectorVm[1].PhysicalAddress" class="text-danger"></span>
                </div>
            </div>
        </div>

        <h2>Company Secretary</h2>
        <hr />
        <div class="row">
            <div class="form-group col-md-6">
                <label asp-for="SecretaryVm.Forename" class="control-label">Forename(s)</label>
                <input asp-for="SecretaryVm.Forename" class="form-control" />
                <span asp-validation-for="SecretaryVm.Forename" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="SecretaryVm.Surname" class="control-label">Surname</label>
                <input asp-for="SecretaryVm.Surname" class="form-control" />
                <span asp-validation-for="SecretaryVm.Surname" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="SecretaryVm.Nationality" class="control-label">Nationality</label>
                <input asp-for="SecretaryVm.Nationality" class="form-control" />
                <span asp-validation-for="SecretaryVm.Nationality" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
