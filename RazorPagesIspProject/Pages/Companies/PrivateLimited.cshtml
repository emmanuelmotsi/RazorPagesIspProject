                <div class="form-group col-md-6">
                    <label asp-for="DirectorVm[1].Surname" class="control-label">Surname</label>
                    <input asp-for="DirectorVm[1].Surname" class="form-control" />
                    <span asp-validation-for="DirectorVm[1].Surname" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="DirectorVm[1].Nationality[0]" class="control-label">Nationality</label>
                    <input asp-for="DirectorVm[1].Nationality" class="form-control" />
                    <span asp-validation-for="DirectorVm[1].Nationality" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="DirectorVm[1].IdentityNumber" class="control-label">Identification Number/Passport</label>
