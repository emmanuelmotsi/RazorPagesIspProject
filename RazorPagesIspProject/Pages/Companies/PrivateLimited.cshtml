                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="SubcriberVm[0].Surname" class="control-label">Surname</label>
                        <input asp-for="SubcriberVm[0].Surname" class="form-control" />
                        <span asp-validation-for="SubcriberVm[0].Surname" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="SubcriberVm[0].Occupation" class="control-label">Occupation</label>
                        <input asp-for="SubcriberVm[0].Occupation" class="form-control" />
                        <span asp-validation-for="SubcriberVm[0].Occupation" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="SubcriberVm[0].SharesTaken" class="control-label">Shares Taken</label>
                        <input asp-for="SubcriberVm[0].SharesTaken" class="form-control" />
                        <span asp-validation-for="SubcriberVm[0].SharesTaken" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-12">
                        <label asp-for="SubcriberVm[0].PhysicalAddress" class="control-label">Address</label>
                        <input asp-for="SubcriberVm[0].PhysicalAddress" class="form-control" />
                        <span asp-validation-for="SubcriberVm[0].PhysicalAddress" class="text-danger"></span>
