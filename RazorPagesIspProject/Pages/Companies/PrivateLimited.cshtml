                </div>
            </div>

            <div class="col-12"><h3>Applicant Details</h3></div>
            <div class="form-group col-md-6">
                <label asp-for="ApplicantVm.FirstName" class="control-label">Forename(s)</label>
                <input asp-for="ApplicantVm.FirstName" class="form-control" />
                <span asp-validation-for="ApplicantVm.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="ApplicantVm.LastName" class="control-label">Surname</label>
                <input asp-for="ApplicantVm.LastName" class="form-control" />
                <span asp-validation-for="ApplicantVm.LastName" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="ApplicantVm.PhoneNumber" class="control-label">Phone Number</label>
                <input asp-for="ApplicantVm.PhoneNumber" class="form-control" />
                <span asp-validation-for="ApplicantVm.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="ApplicantVm.EmailAddress" class="control-label">Address</label>
                <input asp-for="ApplicantVm.EmailAddress" class="form-control" />
                <span asp-validation-for="ApplicantVm.EmailAddress" class="text-danger"></span>
            </div>
