@page
@using RazorPagesIspProject.Models
@model RazorPagesIspProject.Pages.Companies.PrivateLimitedModel
@{
    ViewData["Title"] = "Private Limited";
}


<h1>Registration requirements for Private Limited.</h1>
<hr />

<form method="post">
    <div class="row">
        <div class="form-group col-md-8">
            <label asp-for="Company.EmailAddress" class="control-label">Company Email Address</label>
            <input asp-for="Company.EmailAddress" class="form-control" />
            <span asp-validation-for="Company.EmailAddress" class="text-danger"></span>
        </div>
    </div>

    <h2>Company Address</h2>
    <hr />
