        <div class="col-md-6">
            <div class="row">
                <div class="col-12"><h3>Director 1</h3></div>
                <div class="form-group col-md-6">
                    <label asp-for="DirectorVm[0].Forename" class="control-label">Forename(s)</label>
                    <input asp-for="DirectorVm[0].Forename" class="form-control" />
                    <span asp-validation-for="DirectorVm[0].Forename" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="DirectorVm[0].Surname" class="control-label">Surname</label>
                    <input asp-for="DirectorVm[0].Surname" class="form-control" />
                    <span asp-validation-for="DirectorVm[0].Surname" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="DirectorVm[0].Nationality[0]" class="control-label">Nationality</label>
                    <input asp-for="DirectorVm[0].Nationality" class="form-control" />
                    <span asp-validation-for="DirectorVm[0].Nationality" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="DirectorVm[0].IdentityNumber" class="control-label">Identification Number/Passport</label>
                    <input asp-for="DirectorVm[0].IdentityNumber" class="form-control" />
                    <span asp-validation-for="DirectorVm[0].IdentityNumber" class="text-danger"></span>
                </div>
                <div class="form-group col-12">
                    <label asp-for="DirectorVm[0].PhysicalAddress" class="control-label">Address</label>
                    <input asp-for="DirectorVm[0].PhysicalAddress" class="form-control" />
                    <span asp-validation-for="DirectorVm[0].PhysicalAddress" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="row">
                <div class="col-12"><h3>Director 2</h3></div>
                <div class="form-group col-md-6">
                    <label asp-for="DirectorVm[1].Forename" class="control-label">Forename(s)</label>
                    <input asp-for="DirectorVm[1].Forename" class="form-control" />
                    <span asp-validation-for="DirectorVm[1].Forename" class="text-danger"></span>
