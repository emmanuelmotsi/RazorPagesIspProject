@page
@model RazorPagesIspProject.Pages.Companies.IndexModel

@{
    ViewData["Title"] = "Index";
}

<section>
    <div class="container">
        <div class="text-center my-1">
            <h1>Select Type of Company</h1>
        </div>
        <div class="row justify-content-center text-center">
            <div class="card mx-3" style="width: 18rem;">
                <img src="/assets/img/card-pics.jpeg" class="card-img-top" alt="Private Business Corporation">
                <div class="card-body">
                    <h5 class="card-title">Private Business Corporation</h5>
                    <p class="card-text">Click below if you are interested in registering a private business company.</p>
                    <a asp-page="./PrivateBusiness" class="btn btn-primary">Private Business</a>
                </div>
            </div>
            <div class="card mx-3" style="width: 18rem;">
                <img src="/assets/img/card-pics.jpeg" class="card-img-top" alt="Private Limited Company">
                <div class="card-body">
                    <h5 class="card-title">Private Limited Company</h5>
                    <p class="card-text">Click below if you are interested in registering a private limited company.</p>
                    <a asp-page="./PrivateLimited" class="btn btn-primary">Private Limited</a>
                </div>
            </div>
        </div>
    </div>
</section>