@page
@using RazorPagesIspProject.Models
@model RazorPagesIspProject.Pages.Companies.PrivateBusinessModel
@{
    ViewData["Title"] = "Private Limited";
}

<div class="container">
    <h1>Registration requirements for Private Business Corporation.</h1>
    <hr />

    <form method="post">
        <div class="row">
            <div class="form-group col-md-8">
                <label asp-for="Company.EmailAddress" class="control-label">Company Email Address</label>
                <input asp-for="Company.EmailAddress" class="form-control" />
                <span asp-validation-for="Company.EmailAddress" class="text-danger"></span>
            </div>
        </div>

        <h2>Company Address</h2>
        <hr />
        <div class="row">
            <div class="form-group col-md-12">
                <label asp-for="Company.PhysicalAddress" class="control-label">Street Address</label>
                <input asp-for="Company.PhysicalAddress" class="form-control" />
                <span asp-validation-for="Company.PhysicalAddress" class="text-danger"></span>
            </div>
        </div>

        <h2>Business Objective and Name Preferences</h2>
        <hr />
        <div class="form-row">
            <div class="form-group col-md-12">
                <label asp-for="Company.MainBusiness" class="control-label">Business Objective</label>
                <textarea asp-for="Company.MainBusiness" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Company.MainBusiness" class="text-danger"></span>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="NameOptions[0].Name" class="control-label">Name 1</label>
                <input asp-for="NameOptions[0].Name" class="form-control" />
                <span asp-validation-for="NameOptions[0].Name" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="NameOptions[1].Name" class="control-label">Name 2</label>
                <input asp-for="NameOptions[1].Name" class="form-control" />
                <span asp-validation-for="NameOptions[1].Name" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="NameOptions[2].Name" class="control-label">Name 3</label>
                <input asp-for="NameOptions[2].Name" class="form-control" />
                <span asp-validation-for="NameOptions[2].Name" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="NameOptions[3].Name" class="control-label">Name 4</label>
                <input asp-for="NameOptions[3].Name" class="form-control" />
                <span asp-validation-for="NameOptions[3].Name" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="NameOptions[4].Name" class="control-label">Name 5</label>
                <input asp-for="NameOptions[4].Name" class="form-control" />
                <span asp-validation-for="NameOptions[4].Name" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="NameOptions[5].Name" class="control-label">Name 5</label>
                <input asp-for="NameOptions[5].Name" class="form-control" />
                <span asp-validation-for="NameOptions[5].Name" class="text-danger"></span>
            </div>
        </div>


        <h2>Company Members</h2>
        <hr />
        <div class="row">
            <div class="col-md-6">
                <div class="row">
                    <div class="col-12"><h3>Member 1</h3></div>
                    <div class="form-group col-md-6">
                        <label asp-for="MemberVm[0].Forename" class="control-label">Forename(s)</label>
                        <input asp-for="MemberVm[0].Forename" class="form-control" />
                        <span asp-validation-for="MemberVm[0].Forename" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="MemberVm[0].Surname" class="control-label">Surname</label>
                        <input asp-for="MemberVm[0].Surname" class="form-control" />
                        <span asp-validation-for="MemberVm[0].Surname" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="MemberVm[0].Nationality" class="control-label">Nationality</label>
                        <input asp-for="MemberVm[0].Nationality" class="form-control" />
                        <span asp-validation-for="MemberVm[0].Nationality" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="MemberVm[0].IdentityNumber" class="control-label">Identification Number/Passport</label>
                        <input asp-for="MemberVm[0].IdentityNumber" class="form-control" />
                        <span asp-validation-for="MemberVm[0].IdentityNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="MemberVm[0].Contribution" class="control-label">Contribution</label>
                        <input asp-for="MemberVm[0].Contribution" class="form-control" />
                        <span asp-validation-for="MemberVm[0].Contribution" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="MemberVm[0].CashValue" class="control-label">Contribution Cash Value</label>
                        <input asp-for="MemberVm[0].CashValue" class="form-control" />
                        <span asp-validation-for="MemberVm[0].CashValue" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="MemberVm[0].SharePercentage" class="control-label">Share Percentage</label>
                        <input asp-for="MemberVm[0].SharePercentage" class="form-control" />
                        <span asp-validation-for="MemberVm[0].SharePercentage" class="text-danger"></span>
                    </div>
                    <div class="form-group col-12">
                        <label asp-for="MemberVm[0].PhysicalAddress" class="control-label">Address</label>
                        <input asp-for="MemberVm[0].PhysicalAddress" class="form-control" />
                        <span asp-validation-for="MemberVm[0].PhysicalAddress" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="row">
                    <div class="col-12"><h3>Member 2</h3></div>
                    <div class="form-group col-md-6">
                        <label asp-for="MemberVm[1].Forename" class="control-label">Forename(s)</label>
                        <input asp-for="MemberVm[1].Forename" class="form-control" />
                        <span asp-validation-for="MemberVm[1].Forename" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="MemberVm[1].Surname" class="control-label">Surname</label>
                        <input asp-for="MemberVm[1].Surname" class="form-control" />
                        <span asp-validation-for="MemberVm[1].Surname" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="MemberVm[1].Nationality" class="control-label">Nationality</label>
                        <input asp-for="MemberVm[1].Nationality" class="form-control" />
                        <span asp-validation-for="MemberVm[1].Nationality" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="MemberVm[1].IdentityNumber" class="control-label">Identification Number/Passport</label>
                        <input asp-for="MemberVm[1].IdentityNumber" class="form-control" />
                        <span asp-validation-for="MemberVm[1].IdentityNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="MemberVm[1].Contribution" class="control-label">Contribution</label>
                        <input asp-for="MemberVm[1].Contribution" class="form-control" />
                        <span asp-validation-for="MemberVm[1].Contribution" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="MemberVm[1].CashValue" class="control-label">Contribution Cash Value</label>
                        <input asp-for="MemberVm[1].CashValue" class="form-control" />
                        <span asp-validation-for="MemberVm[1].CashValue" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="MemberVm[1].SharePercentage" class="control-label">Share Percentage</label>
                        <input asp-for="MemberVm[1].SharePercentage" class="form-control" />
                        <span asp-validation-for="MemberVm[1].SharePercentage" class="text-danger"></span>
                    </div>
                    <div class="form-group col-12">
                        <label asp-for="MemberVm[1].PhysicalAddress" class="control-label">Address</label>
                        <input asp-for="MemberVm[1].PhysicalAddress" class="form-control" />
                        <span asp-validation-for="MemberVm[1].PhysicalAddress" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>

        <h2>Accounting Officer</h2>
        <hr />
        <div class="row">
            <div class="form-group col-md-6">
                <label asp-for="AccountingOfficerVm.Forename" class="control-label">Forename(s)</label>
                <input asp-for="AccountingOfficerVm.Forename" class="form-control" />
                <span asp-validation-for="AccountingOfficerVm.Forename" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="AccountingOfficerVm.Surname" class="control-label">Surname</label>
                <input asp-for="AccountingOfficerVm.Surname" class="form-control" />
                <span asp-validation-for="AccountingOfficerVm.Surname" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="AccountingOfficerVm.Qualification" class="control-label">Qualification</label>
                <select asp-items="Html.GetEnumSelectList<Qualification>()" class="form-control"></select>
                <span asp-validation-for="AccountingOfficerVm.Qualification" class="text-danger"></span>
            </div>
            <div class="form-group col-12">
                <label asp-for="AccountingOfficerVm.PhysicalAddress" class="control-label">Address</label>
                <input asp-for="AccountingOfficerVm.PhysicalAddress" class="form-control" />
                <span asp-validation-for="AccountingOfficerVm.PhysicalAddress" class="text-danger"></span>
            </div>
        </div>

        <div class="col-12">
            <h3>Applicant Details</h3>
            <div class="form-group col-md-6">
                <label asp-for="ApplicantVm.FirstName" class="control-label">Forename(s)</label>
                <input asp-for="ApplicantVm.FirstName" class="form-control" />
                <span asp-validation-for="ApplicantVm.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="ApplicantVm.LastName" class="control-label">Surname</label>
                <input asp-for="ApplicantVm.LastName" class="form-control" />
                <span asp-validation-for="ApplicantVm.LastName" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="ApplicantVm.PhoneNumber" class="control-label">Phone Number</label>
                <input asp-for="ApplicantVm.PhoneNumber" class="form-control" />
                <span asp-validation-for="ApplicantVm.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="ApplicantVm.EmailAddress" class="control-label">Address</label>
                <input asp-for="ApplicantVm.EmailAddress" class="form-control" />
                <span asp-validation-for="ApplicantVm.EmailAddress" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <input type="submit" value="Submit" class="btn btn-primary" />
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

